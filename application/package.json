    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "ethereumjs-tx": "^2.1.1",
    "express": "~4.16.1",
    "husky": "^3.1.0",
    "joi": "^14.3.1",
    "joi-password-complexity": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "~1.9.1",
    "mysql2": "^2.0.1",
    "passport": "^0.4.0",
